/* pages/comments/comments.wxss */

.c-container {
  width: 90%;
  margin: 0 auto;
}

.bb-title {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 42rpx;
  color: #424242;
}
.jing{
  font-size: 24rpx;
  color: #fff;
  margin: 0 4rpx 0 4rpx;
  background: #ff4080;
  border-radius: 15rpx;
  padding: 0 8rpx 0 8rpx;
}
.top{
  font-size: 24rpx;
  color: #fff;
  margin: 0 4rpx 0 4rpx;
  background: #7c2051;
  border-radius: 15rpx;
  padding: 0 8rpx 0 8rpx;
}
.bbid {
  font-size: 36rpx;
  color: grey;
}
.from-name-nbb {
  color:#fd4374!important;
}
.from-name-ot {
  color:#8489ff!important;
}
.from-name-tc {
  color:#fb928c!important;
}
.from-name-sz {
  color:#4bd2ff!important;
}
.from-name-xy {
  color:#ca99e8!important;
}
.from {
  color: #2d60ac;
}

.to {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #424242;
}

.comment-bb {
  width: 90%;
  margin: 0 auto;
}

.bbtext {
  font-size: 34rpx;
  margin-bottom: 20rpx;
  color: #424242;
  text-align: justify;
  word-wrap: break-word;
  word-break: break-word;
}

.bb-time {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: #424242;
  text-align: right;
}

.bb-device {
  font-size: 30rpx;
  margin-bottom: 5rpx;
  color: #424242;
  text-align: right;
}

#cm-input {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
  margin-bottom: 20rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 30rpx;
}

#cm-textarea {
  box-sizing: border-box;
  border-radius: 30rpx;
  background: #fff;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
  width: 100%;
  height: 150rpx;
  font-size: 30rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.comment-add {
  width: 90%;
  margin: 0 auto;
}

.tc-btn {
  border-radius: 30rpx;
  color: #fff;
  background: #2d60ac;
  margin-bottom: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
}

.total-tc {
  text-align: center;
  font-size: 30rpx;
  color: grey;
  margin-bottom: 15rpx;
}

.no-comment {
  text-align: center;
  font-size: 30rpx;
  color: grey;
  margin-bottom: 15rpx;
}

.comment-main {
  margin-bottom: 60rpx;
}
.bbpic{
  width: 100%;
  max-height: 400rpx;
  margin-top: 10rpx;
}
.comment-box {
  padding: 20rpx 0 20rpx 0;
  color: #424242;
  font-size: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
  width: 90%;
  margin: 0 auto 20rpx auto;
}

.tc-top {
  margin: 0 20rpx 10rpx 20rpx;
}

.tc-from {
  display: inline-block;
  width: 50%;
  color: #2d60ac;
}

.tc-floor {
  display: inline-block;
  width: 50%;
  text-align: right;
  color: grey;
}

.tucao {
  margin: 0 20rpx 10rpx 20rpx;
}

.tc-time {
  text-align: right;
  margin: 0 20rpx 0 20rpx;
}
