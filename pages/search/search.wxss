/* pages/search/search.wxss */

.nonebb{
  height: 600rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.usermotto {
  margin: 20rpx 0 30rpx 0;
}
.jing{
  font-size: 24rpx;
  color: #fff;
  margin: 0 4rpx 0 4rpx;
  background: #ff4081;
  border-radius: 15rpx;
  padding: 0 8rpx 0 8rpx;
}
.top{
  font-size: 24rpx;
  color: #fff;
  margin: 0 4rpx 0 4rpx;
  background: #7c2051;
  border-radius: 15rpx;
  padding: 0 8rpx 0 8rpx;
}
.head-nbb {
  background-image: -webkit-linear-gradient(top left,#ff8eac,#fd4374);
}

.head-ot {
  background-image: -webkit-linear-gradient(top left,#bbbcff,#8489ff);
}

.head-tc {
  background-image: -webkit-linear-gradient(top left,#ffce8c,#fb928c);
}

.head-sz {
  background-image: -webkit-linear-gradient(top left,#96e6ff,#4bd2ff);
}

.head-xy {
  background-image: -webkit-linear-gradient(top left,#fcbbfb,#ca99e8);
}
.head-nor {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 25rpx;
  color: #fff;
}

.bb-detail {
  font-size: 25rpx;
  text-align: center;
  height: 30rpx;
  margin-top: 20rpx;
  line-height: 30rpx;
}

.bb-detail text {
  color: #fff;
  margin: 0 8rpx 0 8rpx;
  background: #2d60ac;
  border-radius: 15rpx;
  padding: 0 8rpx 0 8rpx;
}

.bbnow {
  position: absolute;
  right: 35rpx;
  top: 35rpx;
  padding: 5rpx;
  height: 60rpx;
  width: 180rpx;
  line-height: 60rpx;
  border: 5rpx solid #2d60ac;
  border-radius: 40rpx;
}
.from-name-nbb {
  color:#fd4374!important;
}
.from-name-ot {
  color:#8489ff!important;
}
.from-name-tc {
  color:#fb928c!important;
}
.from-name-sz {
  color:#4bd2ff!important;
}
.from-name-xy {
  color:#ca99e8!important;
}
.from-name {
  position: absolute;
  left: 90rpx;
  top: 18rpx;
  margin-left: 10rpx;
  width: 40%;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.from {
  color: #2d60ac;
  position: relative;
  width: 100%;
  height: 110rpx;
  border-bottom: 1rpx solid rgba(131, 114, 127, 0.233);
  /* border: 1px solid #2d60ac; */
}

.bbtext {
  font-size: 30rpx;
  color: #424242;
  padding: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  text-align: justify;
  /* margin-bottom: 15rpx; */
}

.bbpic {
  width: 100%;
  max-height: 400rpx;
  margin-top: 10rpx;
}

.bbtext-title {
  color: #424242;
  font-weight: bold;
  display: block;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.bbtflex{
  font-weight: bold;
  display: flex;
  flex-wrap: nowrap;
  color: #424242;
}
.bb-main {
  margin-bottom: 25rpx;
  border-radius: 35rpx;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
}

.time {
  font-size: 26rpx;
  color: grey;
  position: absolute;
  left: 90rpx;
  bottom: 18rpx;
  margin-left: 10rpx;
}

.agent {
  font-size: 26rpx;
  color: grey;
  position: absolute;
  right: 20rpx;
  bottom: 18rpx;
  margin-left: 10rpx;
}

.bb-richtext {
  max-height: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.floor-num {
  font-size: 26rpx;
  color: grey;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  margin-left: 10rpx;
}

.bb-bottom {
  position: relative;
  border-top: 1rpx solid rgba(131, 114, 127, 0.233);
  height: 65rpx;
  color: #808080;
}

.port-btn, .thumbs-btn, .comment-btn {
  position: absolute;
  display: flex;
  width: 33%;
  height: 65rpx;
  font-size: 28rpx;
  color: #424242;
  vertical-align: middle;
  align-items: center;
  justify-content: center;
}

.port-btn {
  top: 0;
  left: 0;
  border-right: 1rpx solid rgba(131, 114, 127, 0.233);
}

.comment-btn {
  top: 0;
  right: 0;
  border-left: 1rpx solid rgba(131, 114, 127, 0.233);
}

.thumbs-btn {
  top: 0;
  left: 33%;
}

.bbbottom-icon {
  width: 34rpx;
  height: 34rpx;
}

.search-box {
  font-size: 28rpx;
  margin-top: 30rpx;
  display: flex;
}

.input-box {
  width: 60%;
}

.keyword {
  /* display: inline-block; */
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  border: 4rpx solid #2d60ac;
  border-radius: 30rpx 0 0 30rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  align-items: center;
  justify-content: center;
}

.searchbtn {
  box-sizing: border-box;
  display: inline-block;
  background: #ffe0ea;
  color: #2d60ac;
  width: 20%;
  height: 60rpx;
  text-align: center;
  line-height: 52rpx;
  align-items: center;
  justify-content: center;
  border-top: 4rpx solid #2d60ac;
  border-bottom: 4rpx solid #2d60ac;
}

.searchidbtn {
  box-sizing: border-box;
  background: #ffe0ea;
  color: #2d60ac;
  height: 60rpx;
  width: 20%;
  line-height: 52rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #2d60ac;
  border-radius: 0 30rpx 30rpx 0;
}

.keyword-holder {
  width: 100%;
}

.page {
  font-size: 30rpx;
  display: flex;
  position: relative;
  bottom: 0;
  flex-direction: row;
  -webkit-justify-content: center;
  justify-content: center;
  align-items: center;
  -webkit-align-items: center;
}

.pageinput-box {
  width: 130rpx;
}

.pageinput {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
  padding: 0 20rpx 0 20rpx;
  font-size: 30rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.page-text {
  padding: 0 20rpx 0 20rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  box-shadow: 0 0 64px 1px rgba(61,88,130,.25);
}
